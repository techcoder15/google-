<body>

    <div class="container">
        <h2 id="welcomeText">ðŸ‘‹ Welcome to AI Study Planner</h2>

        <!-- Login Section -->
        <div id="loginSection" class="section">
            <h3>ðŸ”‘ Login</h3>
            <input type="text" id="username" placeholder="Enter your name">
            <input type="password" id="password" placeholder="Enter your password">
            <button onclick="login()">Login</button>
        </div>

        <!-- Main Study Planner (Hidden until login) -->
        <div id="studyPlanner" class="hidden">
            
            <!-- Class Selection -->
            <div class="section">
                <h3>ðŸŽ“ Select Your Class</h3>
                <select id="classSelect">
                    <option value="6">Class 6</option>
                    <option value="7">Class 7</option>
                    <option value="8">Class 8</option>
                    <option value="9">Class 9</option>
                    <option value="10">Class 10</option>
                    <option value="11">Class 11</option>
                    <option value="12">Class 12</option>
                </select>
            </div>

            <!-- AI-Generated To-Do List -->
            <div class="section">
                <h3>ðŸ¤– AI Study Plan</h3>
                <button onclick="generateAITasks()">Generate Study Plan</button>
                <ul id="aiTaskList"></ul>
            </div>

            <!-- Exam Score Input -->
            <div class="section">
                <h3>ðŸ“Š Exam Score Analysis</h3>
                <p>Enter your exam scores:</p>
                <input type="number" id="mathScore" placeholder="Math Score">
                <input type="number" id="scienceScore" placeholder="Science Score">
                <input type="number" id="historyScore" placeholder="History Score">
                <button onclick="analyzePerformance()">Get AI Feedback</button>
                <p id="feedback" class="feedback"></p>
            </div>
        </div>
    </div>

    <script>
        // Check if user is already logged in
        window.onload = function () {
            let savedUser = localStorage.getItem("username");
            if (savedUser) {
                document.getElementById("welcomeText").innerText = `ðŸ‘‹ Welcome, ${savedUser}!`;
                document.getElementById("loginSection").style.display = "none";
                document.getElementById("studyPlanner").classList.remove("hidden");
            }
        };

        function login() {
            let username = document.getElementById("username").value;
            let password = document.getElementById("password").value;

            if (username.trim() === "" || password.trim() === "") {
                alert("Please enter valid details!");
                return;
            }

            localStorage.setItem("username", username);
            document.getElementById("welcomeText").innerText = `ðŸ‘‹ Welcome, ${username}!`;
            document.getElementById("loginSection").style.display = "none";
            document.getElementById("studyPlanner").classList.remove("hidden");
        }

        function generateAITasks() {
            let selectedClass = document.getElementById("classSelect").value;
            let aiTasks = [];

            if (selectedClass == "6") {
                aiTasks = ["Revise Fractions", "Learn Basics of Motion", "Read Ancient Civilizations"];
            } else if (selectedClass == "10") {
                aiTasks = ["Practice Quadratic Equations", "Revise Chemical Reactions", "Go through History of Indian Independence"];
            } else if (selectedClass == "12") {
                aiTasks = ["Solve Differentiation Problems", "Study Organic Chemistry", "Read Global Politics Chapters"];
            } else {
                aiTasks = ["General Study Task 1", "General Study Task 2"];
            }

            let taskList = document.getElementById("aiTaskList");
            taskList.innerHTML = "";
            aiTasks.forEach(task => {
                let li = document.createElement("li");
                li.innerHTML = `<input type="checkbox"> ${task}`;
                taskList.appendChild(li);
            });
        }

        function analyzePerformance() {
            let feedback = document.getElementById("feedback");
            feedback.innerText = "Analyzing your scores... (AI Backend Needed)";
        }
    </script>

</body>
