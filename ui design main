<body>
    <!-- Modern Login Page -->
    <div class="container" id="login-page">
        <h2>üîê Welcome to Techelp</h2>
        <p>Sign in to access your AI study planner</p>
        <form id="login-form">
            <input type="email" id="email" placeholder="Enter your email" required>
            <input type="password" id="password" placeholder="Enter your password" required>
            <button type="submit">Login</button>
        </form>
    </div>

    <!-- Marks Input Page -->
    <div class="container hidden" id="marks-page">
        <h2>Enter Your Marks</h2>
        <form id="marks-form">
            <input type="number" id="math" placeholder="Math Marks" min="0" max="100" required>
            <input type="number" id="science" placeholder="Science Marks" min="0" max="100" required>
            <input type="number" id="social" placeholder="Social Marks" min="0" max="100" required>
            <button type="submit">Submit</button>
        </form>
    </div>

    <!-- Study Feedback (AI will generate) -->
    <div class="container hidden" id="feedback-page">
        <h2>üìä Study Feedback</h2>
        <p>(AI will analyze your marks and give feedback here)</p>
        <button id="go-to-timetable">Next</button>
    </div>

    <!-- Study Timetable (AI will generate) -->
    <div class="container hidden" id="timetable-page">
        <h2>üìÖ Study Timetable</h2>
        <p>(AI will generate your personalized timetable here)</p>
        <button id="go-to-todo">Next</button>
    </div>

    <!-- To-Do List (AI will generate) -->
    <div class="container hidden" id="todolist-page">
        <h2>‚úÖ Study Plan</h2>
        <p>(AI will create your personalized to-do list here)</p>
    </div>

    <script>
        document.getElementById("login-form").addEventListener("submit", function(event) {
            event.preventDefault();
            document.getElementById("login-page").classList.add("hidden");
            document.getElementById("marks-page").classList.remove("hidden");
        });

        document.getElementById("marks-form").addEventListener("submit", function(event) {
            event.preventDefault();
            
            let math = parseInt(document.getElementById("math").value);
            let science = parseInt(document.getElementById("science").value);
            let social = parseInt(document.getElementById("social").value);

            localStorage.setItem("math", math);
            localStorage.setItem("science", science);
            localStorage.setItem("social", social);

            document.getElementById("marks-page").classList.add("hidden");
            document.getElementById("feedback-page").classList.remove("hidden");
        });

        document.getElementById("go-to-timetable").addEventListener("click", function() {
            document.getElementById("feedback-page").classList.add("hidden");
            document.getElementById("timetable-page").classList.remove("hidden");
        });

        document.getElementById("go-to-todo").addEventListener("click", function() {
            document.getElementById("timetable-page").classList.add("hidden");
            document.getElementById("todolist-page").classList.remove("hidden");
        });
    </script>
</body>
